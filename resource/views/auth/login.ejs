<%- include('./../header'); -%>

<div class="container">
    <div class="row pt-3 justify-content-center">
        <div class="col-8">
            <div class="card card-default">
                <div class="card-header"><h5>Login</h5></div>
                <div class="card-body">
                    <form
                        class="form-horizontal"
                        role="form"
                        method="POST"
                        action="/login"
                        novalidate
                    >
                        <%- include('./../layouts/error-messages') -%>

                        <div class="form-group">
                            <label for="email" class="control-label"
                                >Email</label
                            >
                            <input
                                id="email"
                                type="email"
                                class="form-control"
                                name="email"
                                value=""
                                required
                                autofocus=""
                            />
                        </div>

                        <div class="form-group">
                            <label for="password" class="control-label"
                                >Password</label
                            >
                            <input
                                id="password"
                                type="password"
                                class="form-control"
                                name="password"
                                required
                            />
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <input type="checkbox" name="remember" />
                                Remember me <label> </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                Login
                            </button>
                            <a href="#" class="btn btn-danger">
                                Login with Google</a
                            >
                            <a class="btn btn-link" href="#">
                                Forget Password!
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./../footer'); -%>
